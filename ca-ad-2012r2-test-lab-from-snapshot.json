{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "The name of the administrator account of the new VM and domain"
      },
      "defaultValue": "CAAdmin"
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password for the administrator account of the new VM and domain"
      }
    },
    "domainName": {
      "type": "string",
      "metadata": {
        "description": "The FQDN of the Active Directory Domain to be created"
      },
      "defaultValue": "ex2013.cacloud"
    },
    "dnsPrefix": {
      "type": "string",
      "metadata": {
        "description": "The DNS prefix for the public IP address used by the Load Balancer"
      },
      "defaultValue": "extestdns"
    }
  },
  "variables": {
    "adVMName": "ca-exchange-dc",
	"dbVMName": "ca-exchange-db",
	"adOSdisk": "[concat(variables('adVMName'),'-OSDisk')]",
	"dbOSdisk": "[concat(variables('dbVMName'),'-OSDisk')]",
    "adNicIPAddress": "10.0.0.4",
    "dbNicIPAddress": "10.0.0.5",
    "adpublicIPName": "[concat(variables('adVMName'),'-publicIP')]",
	"dbpublicIPName": "[concat(variables('dbVMName'),'-publicIP')]",
    "adNicName": "[concat(variables('adVMName'),'-Nic')]",
    "dbnicName": "[concat(variables('dbVMName'),'-Nic')]",
    "adSnapshotName": "ca-ex2013-dc-201705021549",
    "dbSnapshotName": "ca-ex2013-db-201705021549",
    "virtualNetworkName": "adVNET",
    "virtualNetworkAddressRange": "10.0.0.0/16",
    "adLBFE": "LBFE",
    "adLBBE": "LBBE",
    "adRDPNAT": "adRDP",
    "adSubnetName": "adSubnet",
    "adSubnetAddressPrefix": "10.0.0.0/24",
    "adLBName": "adLoadBalancer",
	"vnetID": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks', variables('virtualNetworkName'))]",
	"subnetId": "[concat(variables('vnetID'),'/subnets/', variables('adSubnetName'))]",
	"casgn": "casecgroup",
	"resourceRoot": "/subscriptions/dc744faa-2afe-4999-8cde-6f5ccd68abdd/resourceGroups/CAAUTOLABS/providers/Microsoft.Compute/",
	"artifactsLocation": "https://caautodiagnostics.blob.core.windows.net/resources"
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('adpublicIPName')]",
      "apiVersion": "2016-03-30",
      "location": "[resourceGroup().location]",
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[concat(parameters('dnsPrefix'), 'ad')]"
        }
      }
    },    
    {
      "type": "Microsoft.Resources/deployments",
      "name": "VNet",
      "apiVersion": "2016-02-01",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocation'), '/vnet.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetworkName": {
            "value": "[variables('virtualNetworkName')]"
          },
          "virtualNetworkAddressRange": {
            "value": "[variables('virtualNetworkAddressRange')]"
          },
          "subnetName": {
            "value": "[variables('adSubnetName')]"
          },
          "subnetRange": {
            "value": "[variables('adSubnetAddressPrefix')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Network/loadBalancers",
      "name": "[variables('adLBName')]",
      "apiVersion": "2016-03-30",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('adpublicIPName'))]"
      ],
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "[variables('adLBFE')]",
            "properties": {
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('adpublicIPName'))]"
              }
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "[variables('adLBBE')]"
          }
        ],
        "inboundNatRules": [
          {
            "name": "[variables('adRDPNAT')]",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[resourceId('Microsoft.Network/loadBalancers/frontendIPConfigurations', variables('adLBName'), variables('adLBFE'))]"
              },
              "protocol": "tcp",
              "frontendPort": 3389,
              "backendPort": 3389,
              "enableFloatingIP": false
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('adNicName')]",
      "apiVersion": "2016-03-30",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "Microsoft.Resources/deployments/VNet",
        "[resourceId('Microsoft.Network/loadBalancers', variables('adLBName'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[variables('adNicIPAddress')]",
              "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), variables('adSubnetName'))]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[resourceId('Microsoft.Network/loadBalancers/backendAddressPools', variables('adLBName'), variables('adLBBE'))]"
                }
              ],
              "loadBalancerInboundNatRules": [
                {
                  "id": "[resourceId('Microsoft.Network/loadBalancers/inboundNatRules', variables('adLBName'), variables('adRDPNAT'))]"
                }
              ]
            }
          }
        ]
      }
    },
	{
		"apiVersion": "2016-04-30-preview",
		"type": "Microsoft.Compute/disks",
		"name": "[variables('adOSdisk')]",
		"location": "[resourceGroup().location]",
		"properties": {
			"creationData": {
				"createOption": "copy",
				"sourceUri": "[concat(variables('resourceRoot'), 'snapshots/', variables('adSnapshotName'))]"
			},
			"accountType": "Standard_LRS",
			"diskSizeGB": "128",
			"osType": "Windows"
		}
	},
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('adVMName')]",
      "apiVersion": "2016-04-30-preview",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', variables('adNicName'))]",
        "[resourceId('Microsoft.Network/loadBalancers', variables('adLBName'))]",
		"[resourceId('Microsoft.Compute/disks', variables('adOSdisk'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_DS1_v2"
        },        
        "storageProfile": {
			"osDisk": {
			  "osType": "Windows",
			  "managedDisk": { 
				"id": "[resourceId('Microsoft.Compute/disks', variables('adOSdisk'))]" 
			  }, 
			  "caching": "ReadWrite",
			  "createOption": "Attach"
			},
			"dataDisks": []
		},
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('adNicName'))]"
            }
          ]
        },
        "licenseType": "Windows_Server"
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "name": "UpdateVNetDNS",
      "apiVersion": "2016-02-01",
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', variables('adVMName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocation'), '/vnet-with-dns-server.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetworkName": {
            "value": "[variables('virtualNetworkName')]"
          },
          "virtualNetworkAddressRange": {
            "value": "[variables('virtualNetworkAddressRange')]"
          },
          "subnetName": {
            "value": "[variables('adSubnetName')]"
          },
          "subnetRange": {
            "value": "[variables('adSubnetAddressPrefix')]"
          },
          "DNSServerAddress": {
            "value": [
              "[variables('adNicIPAddress')]"
            ]
          }
        }
      }
    },
	{
	  "name": "[variables('casgn')]",
	  "type": "Microsoft.Network/networkSecurityGroups",
	  "apiVersion": "2016-09-01",
	  "location": "[resourceGroup().location]",
	  "properties": {
		  "securityRules": [
			  {
				"name": "rdp",
				  "properties": {
					"priority": 100,
					"sourceAddressPrefix": "*",
					"protocol": "TCP",
					"destinationPortRange": "3389",
					"access": "Allow",
					"direction": "Inbound",
					"sourcePortRange": "*",
					"destinationAddressPrefix": "*"
				  }
				},
				{
				  "name": "jenkins",
				  "properties": {
					  "priority": 110,
					  "sourceAddressPrefix": "*",
					  "protocol": "TCP",
					  "destinationPortRange": "8888",
					  "access": "Allow",
					  "direction": "Inbound",
					  "sourcePortRange": "*",
					  "destinationAddressPrefix": "*"
					}
				}
			]
		}
	},
	{
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[variables('dbpublicIPName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "Microsoft.Resources/deployments/updatevnetdns"
      ],
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[concat(parameters('dnsPrefix'), 'db')]"
        }
      }
    },
    {
      "apiVersion": "2016-03-30",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[variables('dbnicName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[concat('Microsoft.Network/publicIPAddresses/', variables('dbpublicIPName'))]",
        "[concat('Microsoft.Network/networkSecurityGroups/', variables('casgn'))]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('dbpublicIPName'))]"
              },
              "subnet": {
                "id": "[variables('subnetId')]"
              }
            }
          }
        ],
		"networkSecurityGroup": {
			"id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('casgn'))]"
		}
      }
    },
	{
		"apiVersion": "2016-04-30-preview",
		"type": "Microsoft.Compute/disks",
		"name": "[variables('dbosdisk')]",
		"location": "[resourceGroup().location]",
		"properties": {
			"creationData": {
				"createOption": "copy",
				"sourceUri": "[concat(variables('resourceRoot'), 'snapshots/', variables('dbSnapshotName'))]"
			},
			"accountType": "Standard_LRS",
			"diskSizeGB": "128",
			"osType": "Windows"
		}
	}, 
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('dbVMName')]",
      "apiVersion": "2016-04-30-preview",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', variables('dbnicName'))]",
		"[resourceId('Microsoft.Compute/disks', variables('dbosdisk'))]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_DS1_v2"
        },        
        "storageProfile": {
			"osDisk": {
			  "osType": "Windows",
			  "managedDisk": { 
				"id": "[resourceId('Microsoft.Compute/disks', variables('dbosdisk'))]" 
			  }, 
			  "caching": "ReadWrite",
			  "createOption": "Attach"
			},
			"dataDisks": []
		},
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('dbnicName'))]"
            }
          ]
        },
        "licenseType": "Windows_Server"
      }
    }
  ]
}
